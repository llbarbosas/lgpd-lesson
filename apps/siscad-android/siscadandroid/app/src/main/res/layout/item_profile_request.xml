<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btUserPassport"
        style="@style/SiscadButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        app:layout_constraintEnd_toStartOf="@id/btApproveRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome de exemplo" />

    <ImageButton
        android:id="@+id/btApproveRequest"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/green"
        android:padding="0dp"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="@id/btUserPassport"
        app:layout_constraintStart_toEndOf="@id/btUserPassport"
        app:layout_constraintTop_toTopOf="@id/btUserPassport"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>