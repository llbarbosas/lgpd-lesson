---
import { StudentNavbarButton } from "../components/navbar/StudentNavbarButton";
import BaseLayout from "./BaseLayout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <header class="w-screen bg-sky-500 flex justify-between items-center">
    <div class="px-4 py-6 bg-sky-600 w-fit">
      <img
        class="w-[200px]"
        draggable="false"
        src="/siscad_logo.png"
        alt="siscad logo"
      />
    </div>
    <div class="flex items-center text-white">
      <StudentNavbarButton client:load />
    </div>
  </header>
  <main class="min-h-screen w-screen bg-[#ecf0f5] flex justify-center">
    <slot />
  </main>
</BaseLayout>
